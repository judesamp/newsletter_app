.container-fluid
	.col-md-8.col-md-offset-2

		%h1= "Edit Newsletter Issue: " + @newsletter.title
		%br

		= form_for @newsletter, url: newsletter_issue_path do |f|
			= f.label "Issue Title"
			= f.text_field :title
			%br
			%br
			= f.label "Edition Number"
			= f.text_field :number
			%br
			%br
			= f.label "Status"
			= f.text_field :status
			%br
			%br
			= f.label "Publish Date"
			= f.date_field :publish_date
			%br
			%br
			= f.label "Organization"
			= f.select :organization_id, Organization.all.collect {|org| [ org.name, org.id ]}
			%br
			%br
			= f.submit "Update Newsletter Issue!", :class => "btn btn-default"

			.btn
			= link_to 'Delete', newsletter_issue_path(@newsletter), :method => :delete, :class => "btn btn-warning", :data => {:confirm => "Are you sure?"}
		.btn
			= link_to 'Back', newsletter_issues_path, :class => "btn btn-default"